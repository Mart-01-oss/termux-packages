--- a/cbits-unix/init.c
+++ b/cbits-unix/init.c
@@ -1,8 +1,31 @@
 #include <stdint.h>
 #include <unistd.h>
 
+/*
+ * splitmix uses getentropy(3) for seeding on unix platforms.
+ * Android's bionic libc does not provide getentropy() for older API levels
+ * (e.g. API 24 used by Termux builds), so use /dev/urandom instead.
+ */
+#if defined(__ANDROID__)
+#include <fcntl.h>
+#endif
+
 uint64_t splitmix_init() {
 	uint64_t result;
+
+#if defined(__ANDROID__)
+	int fd = open("/dev/urandom", O_RDONLY);
+	if (fd >= 0) {
+		ssize_t r = read(fd, &result, sizeof(uint64_t));
+		close(fd);
+		if (r == (ssize_t)sizeof(uint64_t)) {
+			return result;
+		}
+	}
+	return 0xfeed1000;
+
+#else
 	int r = getentropy(&result, sizeof(uint64_t));
 	return r == 0 ? result : 0xfeed1000;
+#endif
 }
